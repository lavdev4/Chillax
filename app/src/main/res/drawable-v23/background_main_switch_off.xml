<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- item required for elevation shadow to work -->
    <item>
        <shape>
            <size android:width="40dp" android:height="40dp"/>
            <corners android:radius="10dp"/>
            <solid android:color="@color/white"/>
        </shape>
    </item>

    <item>
        <shape>
            <corners android:radius="9dp"/>
            <gradient
                android:startColor="?attr/colorPrimary"
                android:centerColor="@color/black"
                android:type="radial"
                android:gradientRadius="650dp"
                android:centerX="0.5"
                android:centerY="0.5"/>
        </shape>
    </item>

    <item
        android:top="3.2dp"
        android:left="3.2dp"
        android:right="3.2dp"
        android:bottom="3.2dp">
        <shape>
            <corners android:radius="7.5dp"/>
            <solid android:color="?attr/colorPrimary"/>
        </shape>
    </item>

    <item
        android:top="3.2dp"
        android:left="3.2dp"
        android:right="3.2dp"
        android:bottom="3.2dp">
        <shape>
            <corners android:radius="7dp"/>
            <stroke android:width="1dp" android:color="#66000000"/>
        </shape>
    </item>

    <item android:drawable="@drawable/ic_main_switch_off"
        android:gravity="center"
        android:width="30dp"
        android:height="30dp"/>
</layer-list>