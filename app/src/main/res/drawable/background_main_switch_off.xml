<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- item required for elevation shadow to work -->
    <item>
        <shape>
            <size android:width="50dp" android:height="50dp"/>
            <corners android:radius="10dp"/>
            <solid android:color="@color/white"/>
        </shape>
    </item>

    <item>
        <shape>
            <corners android:radius="8dp"/>
            <gradient
                android:startColor="@color/design_default_color_secondary"
                android:centerColor="@color/design_default_color_secondary_variant"
                android:type="radial"
                android:gradientRadius="150dp"
                android:centerX="0.35"
                android:centerY="0.2"/>
        </shape>
    </item>

    <item
        android:top="3dp"
        android:left="3dp"
        android:right="3dp"
        android:bottom="3dp">
        <shape>
            <corners android:radius="5.5dp"/>
            <solid android:color="@color/design_default_color_secondary"/>
        </shape>
    </item>

    <item
        android:top="3dp"
        android:left="3dp"
        android:right="3dp"
        android:bottom="3dp">
        <shape>
            <corners android:radius="5dp"/>
            <stroke android:width="1dp" android:color="#66000000"/>
        </shape>
    </item>

    <item android:drawable="@drawable/ic_main_switch_off"
        android:top="6dp"
        android:left="6dp"
        android:right="6dp"
        android:bottom="6dp"/>
</layer-list>