<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <size android:width="40dp" android:height="40dp"/>
            <corners android:radius="10dp"/>
            <solid android:color="@color/primary"/>
        </shape>
    </item>

    <item>
        <shape>
            <corners android:radius="9dp"/>
            <gradient
                android:startColor="@color/primary"
                android:centerColor="#D6B500"
                android:type="radial"
                android:gradientRadius="250dp"
                android:centerX="0.5"
                android:centerY="0.5"/>
        </shape>
    </item>

    <item>
        <shape>
            <corners android:radius="8.5dp"/>
            <stroke android:color="@color/black" android:width="0.2dp"/>
        </shape>
    </item>

    <item
        android:top="3.2dp"
        android:left="3.2dp"
        android:right="3.2dp"
        android:bottom="3.2dp">
        <shape>
            <corners android:radius="7.5dp"/>
            <solid android:color="@color/primary"/>
        </shape>
    </item>

    <item
        android:top="3.2dp"
        android:left="3.2dp"
        android:right="3.2dp"
        android:bottom="3.2dp">
        <shape>
            <corners android:radius="7dp"/>
            <stroke android:width="1dp" android:color="@color/accent"/>
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:startColor="#33D6B500"
                android:type="radial"
                android:gradientRadius="30dp"/>
        </shape>
    </item>

    <item android:drawable="@drawable/ic_main_switch_on"
        android:left="23dp"
        android:right="23dp"
        android:top="9dp"
        android:bottom="9dp"/>
</layer-list>