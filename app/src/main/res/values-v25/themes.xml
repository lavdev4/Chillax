<resources>
    <!-- Base application theme. -->
    <style name="Theme.Chillax" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primaryVariant</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondaryVariant</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Accent -->
        <item name="colorAccent">@color/accent</item>
        <item name="android:colorAccent">@color/accent</item>
        <!-- Surface -->
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>
        <!-- Text -->
        <item name="fontFamily">@font/nunito_sans</item>
        <!-- Background -->
        <item name="android:windowBackground">@drawable/background_window</item>
        <!-- Other colors -->

        <!-- Bars -->
        <item name="android:navigationBarColor">#00000000</item>
        <item name="android:statusBarColor">#33000000</item>
        <!-- Theming -->
        <item name="android:timePickerDialogTheme">@style/CustomTimePickerDialogTheme</item>
    </style>

    <style name="CustomTimePickerDialogTheme" parent="android:ThemeOverlay.Material.Dialog">
        <item name="android:timePickerStyle">@style/TimePickerSpinnerStyle</item>
        <item name="colorControlNormal">@color/transparent</item>
        <item name="android:windowBackground">@drawable/background_dialog</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/DialogPositiveButtonStyle</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/DialogNegativeButtonStyle</item>
        <item name="android:windowTitleStyle">@style/DialogTitleStyle</item>
        <item name="android:textSize">30sp</item>
        <item name="android:fontFamily">?attr/fontFamily</item>
        <item name="android:textColorPrimary">@color/semiTransparentBlack</item>
    </style>
</resources>