<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ToolbarStyle" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:elevation">16dp</item>
        <item name="android:background">@color/primary</item>
    </style>

    <style name="CardViewStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">20dp</item>
        <item name="cardElevation">10dp</item>
    </style>
    
    <style name="SwitchStyle">
        <item name="android:stateListAnimator">@animator/animator_switch_alpha_selector</item>
        <item name="trackTint">@color/color_track_tint_selector</item>
        <item name="thumbTint">@color/color_thumb_tint_selector</item>
    </style>
    
    <style name="FabStyle" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="fabSize">auto</item>
        <item name="backgroundTint">@color/accent</item>
    </style>

    <style name="TimePickerSpinnerStyle" parent="android:Widget.Material.TimePicker">
        <item name="android:descendantFocusability">blocksDescendants</item>
        <item name="android:timePickerMode">spinner</item>
    </style>

    <style name="TimePickerClockStyle" parent="android:Widget.Material.TimePicker">
        <item name="android:descendantFocusability">blocksDescendants</item>
        <item name="android:timePickerMode">clock</item>
        <item name="android:headerBackground">@color/primary</item>
        <item name="android:numbersTextColor">@color/gray</item>
        <item name="android:numbersSelectorColor">@color/accent</item>
        <item name="android:numbersBackgroundColor">@color/cardFirst</item>
    </style>

    <style name="TitleStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">35sp</item>
        <item name="fontFamily">@font/marck_script</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/accent</item>
        <item name="android:shadowColor">@color/accentDark</item>
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">0.0</item>
        <item name="android:shadowRadius">8</item>
    </style>

    <style name="SubtitleStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">15sp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="MainSwitchStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/transparentBlack</item>
        <item name="fontFamily">@font/nunito_sans</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="CardTextStyle">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TimerTextStyle">
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:alpha">0.8</item>
    </style>

    <style name="DialogTitleStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="DialogPositiveButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/accent</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">?attr/fontFamily</item>
        <item name="strokeColor">@color/accentTransparent</item>
        <item name="icon">@drawable/ic_start_timer_button</item>
        <item name="iconTint">@color/accent</item>
        <item name="iconGravity">end</item>
        <item name="iconPadding">8dp</item>
    </style>

    <style name="DialogNegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/accent</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">?attr/fontFamily</item>
        <item name="android:layout_marginEnd">8dp</item>
    </style>
</resources>